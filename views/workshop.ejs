<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
  </head>
  <style>
    body {
      background: url("Workshop.png") no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
  </style>
  <body class="workshop">
    <div id="workshop-container">
      <button id="workshop-gift-btn" type="button" class="btn btn-dark">
        Go to Garden
      </button>
      <div class="container-fluid" id="gallery-container">
        <% for (category in allItems) { %>
        <div class="category-container drag-drop" data-category="<%=category%>">
          <div><strong><%= category %></strong></div>
          <div class="item-choice">
            <%= allItems[category].items[0].title %>
          </div>
          <img height="120" src="<%= allItems[category].image %>" />
        </div>
        <% } %>
      </div>

      <div id="workshop-table" class="dropzone"></div>
    </div>

    <!-- Modal for each category -->
    <% for (category in allItems) { %>
    <div
      class="modal fade"
      id="<%=category%>-modal"
      tabindex="-1"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title"><%=category%></h5>
          </div>
          <div class="modal-body modal-container" data-category="<%=category%>">
            <!-- Image for this category -->
            <img
              height="300"
              style="margin-right: 10px"
              src="<%= allItems[category].image %>"
            />

            <!-- Container for items in this category -->
            <div class="items-modal-container">
              <!-- Buttons to select item -->
              <div class="btn-group" role="group" style="margin-bottom: 10px">
                <% allItems[category].items.forEach(function(item) { %>
                <button
                  type="button"
                  class="item-modal-btn btn btn-outline-primary"
                  data-item="<%=item.title%>"
                  data-category="<%=category%>"
                >
                  <%=item.title%>
                </button>
                <% }); %>
              </div>

              <!-- Show text for each item -->
              <% allItems[category].items.forEach(function(item) { %>
              <div class="item-modal-text" data-item="<%=item.title%>">
                <div class="item-modal-title">
                  <strong><%= item.title %></strong>
                </div>
                <div class="item-modal-desc"><%= item.description %></div>
              </div>
              <% }); %>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary modal-done-btn"
              data-bs-dismiss="modal"
              data-category="<%=category%>"
            >
              Done
            </button>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Intro pop-up -->
    <div id="workshop-intro" class="modal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Welcome to the Workshop!</h5>
          </div>
          <div class="modal-body">
            <p>Welcome to the workshop! Here, you'll find an array of speculative technological-botanical products. We invite you to interact with the products, drag them onto the worktable, and build your own plant computer!</p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary modal-done-btn"
              data-bs-dismiss="modal"
              data-category="<%=category%>"
            >
              Done
            </button>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/scripts'); %>
  </body>
</html>
